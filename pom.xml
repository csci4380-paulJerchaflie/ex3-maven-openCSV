<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>fdu.maven</groupId>
  <artifactId>ex3-maven-openCSV</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>ex3-maven-openCSV</name>
  <url>http://maven.apache.org</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <jdk.version>1.8</jdk.version>
    <junit.version>4.12</junit.version>
    <log4j.version>2.62</log4j.version>
  </properties>

  <dependencies>
  <!-- ilker, below was not generated by default maven project. ilker added to use java 8 -->
  <!-- NOTE to read/write csv -->
  <dependency>
      <groupId>com.opencsv</groupId>
      <artifactId>opencsv</artifactId>
      <version>4.1</version>
  </dependency>
  <!-- NOTE for logging(tracing) -->
  <dependency>
     <groupId>org.apache.logging.log4j</groupId>
     <artifactId>log4j-api</artifactId>
     <version>2.6.2</version>
  </dependency>
  <dependency>
     <groupId>org.apache.logging.log4j</groupId>
     <artifactId>log4j-core</artifactId>
     <version>2.6.2</version>
  </dependency>

  <!-- NOTE this is for unit testing -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version> <!-- NOTE originally generated as 3.8.1 -->
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
     <plugins>
        <!-- NOTE ilker added below plugin for maven builds to generate JAXB2 classes from XSDs. generate-sources is a maven default cycle goal before compile -->
        <!-- was using 0.12.1 released Dec 2014, 0.13.2 is latest released March 2017-->
	<plugin>
	    <groupId>org.jvnet.jaxb2.maven2</groupId>
	    <artifactId>maven-jaxb2-plugin</artifactId>
	    <version>0.12.1</version>  
	    <executions>
	        <execution>
	            <goals>
	                <goal>generate</goal>
	            </goals>
	        </execution>
	    </executions>
	    <configuration>
	        <schemaDirectory>${project.basedir}/src/main/resources/xsd</schemaDirectory>
	        <schemaIncludes>
	            <include>*.xsd</include>
	        </schemaIncludes>
	    </configuration>
	</plugin> 
	</plugins>
	</build>	
</project>